<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/group_chat_conversation_item_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:contentDescription="mail icon"
        android:src="@drawable/ic_done_all_grey_24dp"
        />



    <TextView
        android:id="@+id/status_participant_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/group_chat_conversation_item_image_view"
        android:layout_toRightOf="@+id/group_chat_conversation_item_image_view"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        tools:text="Participant" />

    <TextView
        android:id="@+id/status_message_sent_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/status_participant_text_view"
        android:maxLines="1"
        android:layout_toEndOf="@+id/group_chat_conversation_item_image_view"
        android:layout_toRightOf="@+id/group_chat_conversation_item_image_view"
        tools:text="Message" />

    <TextView
        android:id="@+id/timestamp_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="Timestamp" />

</RelativeLayout>